---
version: "3.8"
name: "{{ servname | replace('.', '_') }}"
services:
  {{ servname }}:
    image: "qbittorrentofficial/qbittorrent-nox:{{ qbsemver }}"
    network_mode: "{{ ntwkconn }}"
    container_name: "{{ servname }}"
    hostname: "{{ hostname }}"
    stop_grace_period: "{{ stoptime }}"
    tty: true
    tmpfs:
      - "/tmp"
    deploy:
      resources:
        limits:
          cpus: "{{ maxcpugo }}"
          memory: "{{ maxramgo }}"
        reservations:
          cpus: "{{ mincpugo }}"
          memory: "{{ minramgo }}"
    environment:
      - "PUID={{ userpuid }}"
      - "PGID={{ userpgid }}"
      - "TZ={{ timezone }}"
      - "QBT_EULA={{ frnteula }}"
      - "QBT_WEBUI_PORT={{ httpport }}"
      - "QBT_VERSION={{ qbsemver }}"
      - "UMASK={{ filemask }}"
    volumes:
      - "{{ confvolm }}:/config"
      - "{{ filevolm }}:/downloads"
    ports:
      - "{{ httpport }}:8080/tcp"
    restart: "{{ gopolicy }}"
